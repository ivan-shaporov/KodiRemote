{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Stop App",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/noop.js",
            "preLaunchTask": "stopApp",
            "console": "integratedTerminal"
        },
        {
            "name": "Run on Watch",
            "type": "android",
            "request": "launch",
            "appSrcRoot": "${workspaceFolder}/app/src/main",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "preLaunchTask": "installWatch",
            "postDebugTask": "stopWatch",
            "targetDevice": "${config:kodiremote.watchSerial}"
        },
        {
            "name": "Run on Emulator",
            "type": "android",
            "request": "launch",
            "appSrcRoot": "${workspaceFolder}/app/src/main",
            "apkFile": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk",
            "preLaunchTask": "buildDebug",
            "postDebugTask": "stopApp",
            "targetDevice": "emulator-5554"
        },
        {
            "name": "Connect to Watch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/noop.js",
            "preLaunchTask": "connectWatch",
            "console": "integratedTerminal"
        },
        {
            "name": "Start Emulator",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/noop.js",
            "preLaunchTask": "startEmulatorDetached",
            "console": "integratedTerminal"
        }
    ]
}